<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.unimanagement.CourseOverviewController">
   <center>
      <AnchorPane prefHeight="400.0" prefWidth="800.0">
         <children>
            <TableView fx:id="enrollmentTable" prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
              <columns>
                <TableColumn fx:id="enrollmentSerialColumn" prefWidth="75.0" text="Serial" />
                <TableColumn fx:id="enrollmentFirstNameColumn" prefWidth="75.0" text="First Name" />
                  <TableColumn fx:id="enrollmentLastNameColumn" prefWidth="75.0" text="Last Name" />
                  <TableColumn fx:id="enrollmentResidenceColumn" prefWidth="75.0" text="Residence" />
                  <TableColumn fx:id="enrollmentBirthdayColumn" prefWidth="75.0" text="Birthday" />
                  <TableColumn fx:id="enrollmentExaminationDateColumn" prefWidth="75.0" text="Examination Date" />
                  <TableColumn fx:id="enrollmentGradeColumn" prefWidth="75.0" text="Grade" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </children>
      </AnchorPane>
   </center>
   <top>
      <GridPane BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="1.7976931348623157E308" minWidth="10.0" prefWidth="600.0" />
            <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="0.0" />
          <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" minWidth="7.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label fx:id="courseTitleLabel" text="Label" GridPane.halignment="CENTER">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Label fx:id="teacherLabel" text="Label" GridPane.columnIndex="2" />
            <Label text="Teacher: " GridPane.columnIndex="1">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets right="10.0" />
         </padding>
      </GridPane>
   </top>
   <bottom>
      <GridPane BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" minWidth="10.0" />
          <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <padding>
            <Insets right="20.0" />
         </padding>
         <children>
            <ButtonBar GridPane.columnIndex="4">
               <buttons>
                  <Button mnemonicParsing="false" onAction="#handleBack" text="Back" />
               </buttons>
            </ButtonBar>
            <Label text="Avg. Grade: ">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <Label fx:id="avgGradeLabel" text="Label" GridPane.columnIndex="1" />
            <Label text="NÂ° Students: " GridPane.columnIndex="2">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Label>
            <Label fx:id="nStudentsLabel" text="Label" GridPane.columnIndex="3" />
         </children>
      </GridPane>
   </bottom>
</BorderPane>
