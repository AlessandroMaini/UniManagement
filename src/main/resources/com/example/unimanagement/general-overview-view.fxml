<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>


<BorderPane xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.unimanagement.GeneralOverviewController">
   <center>
      <TabPane fx:id="tabPane" tabClosingPolicy="UNAVAILABLE">
         <tabs>
            <Tab closable="false" text="Students">
               <content>
                  <TableView fx:id="studentTable" prefHeight="400.0" prefWidth="600.0">
                    <columns>
                      <TableColumn fx:id="studentSerialColumn" prefWidth="75.0" text="Serial" />
                      <TableColumn fx:id="studentFirstNameColumn" prefWidth="75.0" text="First Name" />
                        <TableColumn fx:id="studentLastNameColumn" prefWidth="75.0" text="Last Name" />
                        <TableColumn fx:id="studentResidenceColumn" prefWidth="75.0" text="Residence" />
                        <TableColumn fx:id="studentBirthdayColumn" prefWidth="75.0" text="Birthday" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </content>
            </Tab>
            <Tab closable="false" text="Courses">
               <content>
                  <TableView fx:id="courseTable" prefHeight="200.0" prefWidth="200.0">
                    <columns>
                      <TableColumn fx:id="courseNameColumn" prefWidth="75.0" text="Name" />
                      <TableColumn fx:id="courseTeacherColumn" prefWidth="75.0" text="Teacher" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </content>
            </Tab>
            <Tab closable="false" text="Teachers">
               <content>
                  <TableView fx:id="teacherTable" prefHeight="200.0" prefWidth="200.0">
                    <columns>
                      <TableColumn fx:id="teacherFirstNameColumn" prefWidth="75.0" text="First Name" />
                      <TableColumn fx:id="teacherLastNameColumn" prefWidth="75.0" text="Last Name" />
                        <TableColumn fx:id="teacherResidenceColumn" prefWidth="75.0" text="Residence" />
                        <TableColumn fx:id="teacherBirthdayColumn" prefWidth="75.0" text="Birthday" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </center>
   <bottom>
      <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <buttons>
            <Button mnemonicParsing="false" onAction="#handleNew" text="New..." />
            <Button mnemonicParsing="false" onAction="#handleEdit" text="Edit..." />
            <Button mnemonicParsing="false" onAction="#handleDelete" text="Delete" />
        </buttons>
         <BorderPane.margin>
            <Insets right="10.0" />
         </BorderPane.margin>
      </ButtonBar>
   </bottom>
</BorderPane>
